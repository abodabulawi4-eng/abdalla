@inherits LayoutComponentBase

<div class="main-layout">
    <!-- 🔗 Navigation Bar -->
    <nav class="navbar">
        <div class="nav-container">
            <div class="nav-brand">
                <a href="/" class="brand-link">
                    <span class="brand-name">Abdalla</span>
                    <span class="brand-accent">Hani</span>
                </a>
            </div>
            
            <div class="nav-links">
                <a href="/" class="nav-link @GetActiveClass("/")">
                    <span class="nav-icon">🏠</span>
                    Home
                </a>
                <a href="/about" class="nav-link @GetActiveClass("/about")">
                    <span class="nav-icon">👤</span>
                    About
                </a>
                <a href="/skills" class="nav-link @GetActiveClass("/skills")">
                    <span class="nav-icon">💻</span>
                    Skills
                </a>
                <a href="/projects" class="nav-link @GetActiveClass("/projects")">
                    <span class="nav-icon">🚀</span>
                    Projects
                </a>
                <a href="/contact" class="nav-link @GetActiveClass("/contact")">
                    <span class="nav-icon">📞</span>
                    Contact
                </a>
            </div>

            <!-- Mobile Menu Button -->
            <button class="mobile-menu-btn" @onclick="ToggleMobileMenu">
                <span></span>
                <span></span>
                <span></span>
            </button>
        </div>
    </nav>

    <!-- Mobile Menu -->
    <div class="mobile-menu @(isMobileMenuOpen ? "active" : "")">
        <a href="/" class="mobile-nav-link" @onclick="CloseMobileMenu">
            <span class="nav-icon">🏠</span>
            Home
        </a>
        <a href="/about" class="mobile-nav-link" @onclick="CloseMobileMenu">
            <span class="nav-icon">👤</span>
            About
        </a>
        <a href="/skills" class="mobile-nav-link" @onclick="CloseMobileMenu">
            <span class="nav-icon">💻</span>
            Skills
        </a>
        <a href="/projects" class="mobile-nav-link" @onclick="CloseMobileMenu">
            <span class="nav-icon">🚀</span>
            Projects
        </a>
        <a href="/contact" class="mobile-nav-link" @onclick="CloseMobileMenu">
            <span class="nav-icon">📞</span>
            Contact
        </a>
    </div>

    <!-- Main Content -->
    <main class="main-content">
        @Body
    </main>

    <!-- ⬇️ Footer -->
    <footer class="footer">
        <div class="footer-container">
            <div class="footer-content">
                <div class="footer-section">
                    <h3>Abdalla Hani</h3>
                    <p>AI Programmer specialized in building innovative solutions</p>
                </div>
                
                <div class="footer-section">
                    <h4>Quick Links</h4>
                    <div class="footer-links">
                        <a href="/">Home</a>
                        <a href="/projects">Projects</a>
                        <a href="/contact">Contact</a>
                    </div>
                </div>
                
                <div class="footer-section">
                    <h4>Connect</h4>
                    <div class="social-links">
                        <a href="https://linkedin.com/in/abdallahani" target="_blank" class="social-link">
                            LinkedIn
                        </a>
                        <a href="https://github.com/abdallahani" target="_blank" class="social-link">
                            GitHub
                        </a>
                        <a href="mailto:your.email@example.com" class="social-link">
                            Email
                        </a>
                    </div>
                </div>
            </div>
            
            <div class="footer-bottom">
                <p>&copy; 2024 Abdalla Hani Abulawi. All rights reserved.</p>
            </div>
        </div>
    </footer>
</div>

<style>
    /* 🌙 Variables */
    :root {
        --primary-dark: #0f172a;
        --secondary-dark: #1e293b;
        --accent-teal: #0ea5a4;
        --accent-light: #22d3ee;
        --text-primary: #f1f5f9;
        --text-secondary: #cbd5e1;
        --text-muted: #94a3b8;
        --border-color: #334155;
    }

    /* 🔗 Navigation Bar */
    .navbar {
        background: rgba(15, 23, 42, 0.95);
        backdrop-filter: blur(20px);
        border-bottom: 1px solid var(--border-color);
        position: fixed;
        top: 0;
        width: 100%;
        z-index: 1000;
        padding: 1rem 0;
        transition: all 0.3s ease;
    }

    .nav-container {
        max-width: 1200px;
        margin: 0 auto;
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 0 2rem;
    }

    /* 🏷️ Brand */
    .brand-link {
        text-decoration: none;
        font-size: 1.8rem;
        font-weight: 700;
    }

    .brand-name {
        color: var(--text-primary);
    }

    .brand-accent {
        color: var(--accent-teal);
    }

    /* 📎 Navigation Links */
    .nav-links {
        display: flex;
        gap: 0.5rem;
        align-items: center;
    }

    .nav-link {
        color: var(--text-secondary);
        text-decoration: none;
        font-weight: 500;
        transition: all 0.3s ease;
        padding: 0.75rem 1.5rem;
        border-radius: 8px;
        display: flex;
        align-items: center;
        gap: 0.5rem;
        position: relative;
    }

    .nav-link:hover {
        color: var(--accent-teal);
        background: rgba(14, 165, 164, 0.1);
    }

    .nav-link.active {
        color: var(--accent-teal);
        background: rgba(14, 165, 164, 0.15);
    }

    .nav-icon {
        font-size: 1.1rem;
    }

    /* 📱 Mobile Menu Button */
    .mobile-menu-btn {
        display: none;
        flex-direction: column;
        background: none;
        border: none;
        cursor: pointer;
        padding: 0.5rem;
        gap: 4px;
    }

    .mobile-menu-btn span {
        width: 25px;
        height: 3px;
        background: var(--text-primary);
        transition: all 0.3s ease;
        border-radius: 2px;
    }

    /* 📱 Mobile Menu */
    .mobile-menu {
        display: none;
        position: fixed;
        top: 80px;
        left: 0;
        width: 100%;
        background: var(--primary-dark);
        border-top: 1px solid var(--border-color);
        padding: 1rem 0;
        transform: translateY(-100%);
        transition: transform 0.3s ease;
        z-index: 999;
    }

    .mobile-menu.active {
        transform: translateY(0);
    }

    .mobile-nav-link {
        display: flex;
        align-items: center;
        gap: 1rem;
        padding: 1rem 2rem;
        color: var(--text-secondary);
        text-decoration: none;
        border-bottom: 1px solid var(--border-color);
        transition: all 0.3s ease;
    }

    .mobile-nav-link:hover {
        color: var(--accent-teal);
        background: rgba(14, 165, 164, 0.1);
    }

    /* 📱 Main Content */
    .main-content {
        min-height: 100vh;
        padding-top: 80px; /* Offset for fixed navbar */
    }

    /* ⬇️ Footer */
    .footer {
        background: var(--secondary-dark);
        border-top: 1px solid var(--border-color);
        padding: 3rem 0 1rem;
        margin-top: 4rem;
    }

    .footer-container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 0 2rem;
    }

    .footer-content {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 2rem;
        margin-bottom: 2rem;
    }

    .footer-section h3 {
        color: var(--accent-teal);
        margin-bottom: 1rem;
        font-size: 1.5rem;
    }

    .footer-section h4 {
        color: var(--text-primary);
        margin-bottom: 1rem;
        font-size: 1.1rem;
    }

    .footer-section p {
        color: var(--text-secondary);
        line-height: 1.6;
    }

    .footer-links {
        display: flex;
        flex-direction: column;
        gap: 0.5rem;
    }

    .footer-links a {
        color: var(--text-secondary);
        text-decoration: none;
        transition: color 0.3s ease;
    }

    .footer-links a:hover {
        color: var(--accent-teal);
    }

    .social-links {
        display: flex;
        flex-direction: column;
        gap: 0.5rem;
    }

    .social-link {
        color: var(--text-secondary);
        text-decoration: none;
        transition: color 0.3s ease;
        padding: 0.5rem 0;
    }

    .social-link:hover {
        color: var(--accent-teal);
    }

    .footer-bottom {
        border-top: 1px solid var(--border-color);
        padding-top: 2rem;
        text-align: center;
        color: var(--text-muted);
    }

    /* 📱 Responsive Design */
    @@media (max-width: 768px) {
        .nav-links {
            display: none;
        }

        .mobile-menu-btn {
            display: flex;
        }

        .mobile-menu {
            display: block;
        }

        .footer-content {
            grid-template-columns: 1fr;
            text-align: center;
        }

        .nav-container {
            padding: 0 1rem;
        }
    }

    @@media (max-width: 480px) {
        .brand-link {
            font-size: 1.5rem;
        }

        .footer-container {
            padding: 0 1rem;
        }
    }
</style>

@code {
    private bool isMobileMenuOpen = false;

    private string GetActiveClass(string path)
    {
        // Active class will be applied based on current page
        return "";
    }

    private void ToggleMobileMenu()
    {
        isMobileMenuOpen = !isMobileMenuOpen;
    }

    private void CloseMobileMenu()
    {
        isMobileMenuOpen = false;
    }
}